{% extends '@EasyAdmin/page/content.html.twig' %}
{% block page_title 'Welcome to EasyAdmin 3' %}

{% block page_content %}
    <div class="section mt-30">
        <div class="columns">
            <div class="column has-text-centered">
                <div class="box stats-card has-background-info">
                    <i class="fa fa-file-o fa-8x is-block mb-5 has-text-light" aria-hidden="true"></i>
                    <span class="has-text-weight-bold is-size-3 has-text-light">
                        {{ countArticles }} article
                    </span>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column has-text-centered">
                <div class="box stats-card has-background-info">
                    <i class="fa fa-file-o fa-8x is-block mb-5 has-text-light" aria-hidden="true"></i>
                    <span class="has-text-weight-bold is-size-3 has-text-light">
                        {{ countComments }} comment
                    </span>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column has-text-centered">
                <div class="box stats-card has-background-info">
                    <i class="fa fa-file-o fa-8x is-block mb-5 has-text-light" aria-hidden="true"></i>
                    <span class="has-text-weight-bold is-size-3 has-text-light">
                        {{ countUsers }} user
                    </span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}