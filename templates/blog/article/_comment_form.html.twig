{{ form_start(form, {'action': path('comment_new', {'slug': article.slug}), 'attr': {'id': 'comment-form'} }) }}
{{ form_errors(form) }}
<article class="media">
    <div class="media-content">

        <div class="field">
            {{ form_label(form.content, 'leave comment', {'label_attr': {'class': 'label'}}) }}
            <p class="control">
                {{ form_widget(form.content, {'attr': {'class': 'textarea', 'placeholder': 'write comment '}}) }}
            </p>
        </div>
        <div class="field">
            <p class="control">
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-lg btn-primary">Post</button>
            </p>
        </div>
    </div>
</article>
{{ form_end(form) }}
