{% extends 'base.html.twig' %}

{% block title %}{{ "resetPassword.title"|trans }}{% endblock %}

{% block body %}
    <div id="reset_pwd" class="card bg-light">
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>{{ "resetPassword.h1"|trans }}</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                {{ "resetPassword.information"|trans }}
            </small>
        </div>

        <button class="btn btn-primary">{{ "resetPassword.button.sendEmail"|trans }}</button>
    {{ form_end(requestForm) }}
    </div>
{% endblock %}